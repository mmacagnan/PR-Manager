@page
@model PrManager.UI.Pages.Account.Signup

@{
    Layout = "Shared/_LayoutAuth";
    ViewData["Title"] = "Sign Up";
}

<div class="card p-4">
    <form method="post">
        <div class="card-body">
            <h1>Sign Up</h1>
            <p class="text-muted">Create your account</p>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="icon-user"></i>
                    </span>
                </div>
                <input asp-for="SignUp.FirstName" class="form-control" placeholder="First name">
                <span asp-validation-for="SignUp.FirstName" class="invalid-feedback"></span>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="icon-user"></i>
                    </span>
                </div>
                <input asp-for="SignUp.LastName" class="form-control" placeholder="Last name">
                <span asp-validation-for="SignUp.LastName" class="invalid-feedback"></span>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="icon-user"></i>
                    </span>
                </div>
                <input asp-for="SignUp.Email" class="form-control" placeholder="Email">
                <span asp-validation-for="SignUp.Email" class="invalid-feedback"></span>
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="icon-user"></i>
                    </span>
                </div>
                <input asp-for="SignUp.UserName" class="form-control" placeholder="Username">
                <span asp-validation-for="SignUp.UserName" class="invalid-feedback"></span>
            </div>
            <div class="input-group mb-4">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="icon-lock"></i>
                    </span>
                </div>
                <input asp-for="SignUp.Password" class="form-control" placeholder="Password">
                <span asp-validation-for="SignUp.Password" class="invalid-feedback"></span>
            </div>

            <div class="input-group mb-4">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="icon-lock"></i>
                    </span>
                </div>
                <input asp-for="SignUp.ConfirmPassword" class="form-control" placeholder="Confirm password">
                <span asp-validation-for="SignUp.ConfirmPassword" class="invalid-feedback"></span>
            </div>
            <div class="row">
                <div class="col-6">
                    <button type="submit" class="btn btn-primary px-4">Register</button>
                </div>
                <div class="col-6 text-right">
                    <a class="btn btn-link px-0">Forgot password?</a>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
    <div class="card-body text-center">
        <div>
            <h2>Login</h2>
            <p>Already have an account?</p>
            <a asp-page="/account/signin" class="btn btn-primary active mt-3">Login now!</a>
        </div>
    </div>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial"/>
}